{{stats-bar/dash-board sendQuit=(action "sendToScores")}}

<div class="container-fluid full-screen top-spacer">
  <div class="row justify-content-center mb-3">
    <div class="col-12 col-sm-10 col-md-6 mt-md-4">

      {{#if isLastTurn}}
        {{subway/subway-terminal sendEndGame=(action "sendEndGame")}}

      {{else if helpScreenVisible}}
        {{subway/subway-help}}

        <div class="row d-flex justify-content-center mt-3">
          <div class="col-4 d-flex align-items-center justify-content-center">
            <button class="btn btn-secondary" {{action "toggleHelpScreen"}}>
              Back
            </button>
          </div>
        </div>

      {{else}}
        <div class="d-flex flex-column">
          <div class="text-center border-bottom border-dark mb-3">
            <h5 class="page-heading text-primary text-uppercase">
              <span class="letter-spacing-min">Destinations</span>
            </h5>
          </div>

          <div id="subway-stations-menu">
            {{subway/subway-stations sendStation=(action "navigate")}}
          </div>

          <div class="row d-flex justify-content-center mt-2 mt-sm-0">
            <div class="col-4 d-flex align-items-center justify-content-center">
              <button class="btn btn-simple" {{action "toggleHelpScreen"}}>
                <h2 class="m-0"><i class="far fa-question-circle"></i></h2>
              </button>
            </div>
          </div>
        </div>

      {{/if}}

    </div>
  </div>
</div>

{{nav-bar}}
