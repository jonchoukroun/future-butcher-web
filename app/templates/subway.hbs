{{stats-bar sendQuit=(action "sendToScores")}}

<div class="container-fluid full-screen top-spacer">
  <div class="row justify-content-center mb-3">
    <div class="col-12 col-sm-10 col-md-6 mt-md-4">

      {{#if isLastTurn}}
        {{subway/subway-terminal sendEndGame=(action "sendEndGame")}}

      {{else}}
        <div class="d-flex flex-column">
          <div class="text-center border-bottom border-secondary mb-3">
            <h3 class="page-heading text-secondary">Destinations</h3>
          </div>

          <div id="subway-stations-menu">
            {{subway/subway-stations sendStation=(action "navigate")}}
          </div>

        </div>

      {{/if}}

    </div>
  </div>
</div>

{{nav-bar}}
