<div class="bg-terminal p-3 border border-terminal crt-grid">
  <div class="container-fluid">
    <div class="row d-flex justify-content-between align-items-center mb-5">
      <div class="col-8">
        <h4 class="terminal-text text-capitalize mb-0 ml-lg-3">
          Inventory
        </h4>
      </div>

      <div class="col-4 d-flex justify-content-end">
        <button
          class="btn btn-simple btn-sm"
          type="button"
          {{action "clickBack"}}
        >
          Close
        </button>
      </div>
    </div>
  </div>

  {{#if hasInventory}}
    {{#each-in pack as |cut weight|}}
      <div class="row">
        <div class="col-6">
          <h6 class="terminal-text text-right">
            <span class="text-capitalize">{{cut}}</span>:
          </h6>
        </div>

        <div class="col-6">
          {{!-- template-lint-disable attribute-indentation --}}
          <h6
            class="terminal-text"
          >
            {{~#if (lt weight 10)~}}
              &nbsp;
            {{~/if~}}
            {{weight}}
            {{#if (eq weight 1)}}
              lb
            {{else}}
              lbs
            {{/if}}
          </h6>
          {{!-- template-lint-enable attribute-indentation --}}
        </div>
      </div>
    {{/each-in}}

  {{else}}
    <h6 class="terminal-text">No cuts owned.</h6>
  {{/if}}


</div>
