<div class="bg-terminal p-3 border border-terminal">
  <div class="d-flex flex-row justify-content-end">
    <button
      class="btn btn-terminal btn-sm align-self-end mb-3 pull-right"
      {{action "clickBack"}}
    >
      <i class="fas fa-times"></i>
    </button>
  </div>

  {{#if hasInventory}}
    {{#each-in pack as |cut weight|}}
      <div class="row">
        <div class="col-5">
          <h6 class="terminal-text">
            <span class="text-capitalize">{{cut}}</span>:
          </h6>
        </div>

        <div class="col-7">
          <h6 class="terminal-text">
            {{weight}}
            {{#if (eq weight 1)}}
              lb
            {{else}}
              lbs
            {{/if}}
          </h6>
        </div>
      </div>
    {{/each-in}}

  {{else}}
    <h6 class="terminal-text">No cuts owned.</h6>
  {{/if}}


</div>
