<div class="bg-terminal p-3 border border-terminal">
  <div class="d-flex flex-row justify-content-end">
    <button
      class="btn btn-terminal align-self-end"
      {{action "clickBack"}}
    >
      <i class="fas fa-times"></i>
    </button>
  </div>

  <div class="d-flex flex-row">
    <h4 class="terminal-text">
      <span class="text-capitalize">{{cutName}}</span>
      <span class="small">in pack:</span>

      {{format-number cutsOwned precision=0}}
      <span class="small">
        {{#if (eq cutsOwned 1)}}
          lb
        {{else}}
          lbs
        {{/if}}
      </span>
    </h4>
  </div>

  <form
    class="transaction-form align-self-center"
    {{action "submitSellCut" on="submit"}}
  >
    <div class="form-group row mb-3">
      <label
        for="sell-input"
        class="col-1 col-for-label"
      >
        <h4>
          <i class="fas fa-angle-right"></i>
        </h4>
      </label>

      <div class="col d-flex align-items-center pl-0">
        {{input
          id="sell-input"
          value=sellAmount
          type="text"
          pattern="[0-9]*"
          placeholder=cutsOwnedPlaceholder
          autofocus="true"
          classNames="form-control form-control-lg mt-md-2"
          key-up=(action "calculateProfit")
        }}
      </div>
    </div>

    {{#if (not sellAmount)}}
      <div class="d-flex flex-column align-items-center justify-content-center">
        <button class="btn btn-terminal btn-block" {{action "clickSellMax"}}>
          Sell all {{cutsOwned}} for
          {{format-money cutsOwnedProfit precision=0}}
        </button>
      </div>

    {{else}}
      <div class="d-flex justify-content-center">
        {{#if invalidSell}}
          <button class="btn btn-terminal btn-block btn-terminal-disabled">
            Sell for {{format-money estimatedProfit precision=0}}
          </button>
        {{else}}
          <button class="btn btn-terminal btn-block" type="submit">
            Sell for {{format-money estimatedProfit precision=0}}
          </button>
        {{/if}}
      </div>
    {{/if}}

    <p class="small terminal-text text-center mt-2">Or enter a different amount.</p>
  </form>
</div>
