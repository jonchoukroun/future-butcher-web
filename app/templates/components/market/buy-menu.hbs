<div class="bg-terminal p-3 border border-terminal">
  <div class="d-flex flex-row justify-content-end">
    <button
      class="btn btn-terminal btn-sm align-self-end mb-3 pull-right"
      {{action "clickBack"}}
    >
      <i class="fas fa-times"></i>
    </button>
  </div>

  <div class="d-flex flex-row">
    <h4 class="terminal-text">
      <span class="text-capitalize">{{cutName}}</span>
      <span class="small">available:</span>

      {{format-number cutsAvailable precision=0}}
      <span class="small">
        {{#if (eq cutsAvailable 1)}}
          lb
        {{else}}
          lbs
        {{/if}}
      </span>
    </h4>
  </div>

  <form
    class="transaction-form align-self-center"
    {{action "submitBuyCut" on="submit"}}
  >
    <div class="form-group row mb-3">
      <label
        for="buy-input"
        class="col-1 col-form-label"
      >
        <h4>
          <i class="fas fa-angle-right"></i>
        </h4>
      </label>

      <div class="col d-flex align-items-center pl-0">
        {{input
          id="buy-input"
          value=buyAmount
          type="text"
          pattern="[0-9]*"
          placeholder=maxCanBuyPlaceholder
          autofocus="true"
          classNames="form-control form-control-lg mt-md-2"
          key-up=(action "calculateCost")
        }}
      </div>
    </div>

    {{#if (not buyAmount)}}
      <div class="d-flex flex-column align-items-center justify-content-center">
        <button
          class="btn btn-terminal btn-block"
          {{action "clickBuyMax"}}
        >
          Buy {{maxCanBuy}}
          {{#if (eq maxCanBuy 1)}}
            lb
          {{else}}
            lbs
          {{/if}}
          for
          {{format-money maxCanBuyCost precision=0}}
        </button>
      </div>

    {{else}}
      <div class="d-flex justify-content-center">
        {{#if invalidBuy}}
          <button class="btn btn-terminal btn-terminal-disabled btn-block">
            Buy {{buyAmount}} lbs for
            {{format-money estimatedCost precision=0}}
          </button>
        {{else}}
          <button type="submit" class="btn btn-terminal btn-block">
            Buy {{buyAmount}} lbs for
            {{format-money estimatedCost precision=0}}
          </button>
        {{/if}}
      </div>
    {{/if}}

    <p class="small terminal-text text-center mt-2">Or enter a different amount.</p>
  </form>
</div>
