<div class="border-bottom border-light">
  <div class="d-flex align-items-end cut-header">
    <h4 class="mb-1 ml-2 mr-auto text-capitalize text-accent-alt">{{cut}}</h4>

    {{#if (gt cutsOwned 0)}}
      <h5 class="cuts-owned mb-1 mr-2">
        {{cutsOwned}}
      </h5>
      <span class="small">
        {{#if (eq cutsOwned 1)}}
          lb
        {{else}}
          lbs
        {{/if}}
      </span>
    {{/if}}
  </div>
</div>

<div class="d-flex flex-row align-items-end mb-3">
  {{#if price}}
    <div class="flex-grow-1 pr-2 pr-md-3 pr-lg-5 pr-xl-5">
      <p
        class="mt-1 mb-0 text-right {{if isSurgePrice "text-warning"}}"
      >
        {{format-money price precision=0}}
      </p>

      <p class="small mb-0 text-right font-italic">
        Average: {{format-money medianPrice precision=0}}
      </p>
    </div>

    {{#if (and isSurgePrice (gt cutsOwned 0))}}
      <div class="col-5 col-lg-4 px-0">
        <button
          class="btn btn-secondary btn-block mt-1 mb-0"
          {{action "openSellMenu"}}
        >
          Get rich
        </button>
      </div>
    {{else}}
      <div class="btn-group ml-auto">
        {{#if (and quantity canAffordCut hasPackSpace)}}
          <button
            class="btn btn-secondary btn-eq-flex mt-1 mb-0"
            {{action "openBuyMenu"}}
          >
            Buy
          </button>

        {{else}}
          <button class="btn btn-secondary btn-secondary-disabled btn-eq-flex mt-1 mb-0">
            Buy
          </button>

        {{/if}}

        {{#if (gt cutsOwned 0)}}
          <button
            class="btn btn-secondary btn-eq-flex mt-1 mb-0"
            {{action "openSellMenu"}}
          >
            Sell
          </button>

        {{else}}
          <button class="btn btn-secondary btn-secondary-disabled btn-eq-flex mt-1 mb-0">
            Sell
          </button>

        {{/if}}
      </div>
    {{/if}}

  {{else}}
    <div class="flex-grow-1 pr-2 pr-md-3 pr-lg-5 pr-xl-5">
      <p class="mb-1 font-italic text-right text-secondary">No current demand</p>
    </div>
  {{/if}}
</div>
