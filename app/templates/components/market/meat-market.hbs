{{#if showBuyForm}}
  {{market/buy-menu
    cutName=buyingCut
    sendBuyMenuClose=(action "closeBuyMenu")
  }}
{{/if}}

{{#if showSellForm}}
  {{market/sell-menu
    cutName=sellingCut
    sendSellMenuClose=(action "closeSellMenu")
  }}
{{/if}}

{{#if showInventory}}
  {{market/pack-inventory
    sendInventoryClose=(action "closeInventory")
  }}
{{/if}}

{{#each-in marketCuts as |cut market|}}
  {{market/cut-entry
    cut=cut
    price=market.price
    quantity=market.quantity
    sendOpenBuyMenu=(action "openBuyMenu")
    sendOpenSellMenu=(action "openSellMenu")
  }}
{{/each-in}}

<div class="flex-row border-top border-black">
  <a
    href="#"
    class="link-text"
    {{action "openInventory"}}
  >
    <p class="small text-right mb-1">
      <b>Total cuts carried:</b>
      {{totalWeightCarried}}/{{packSpace}} lbs
    </p>
  </a>
</div>
