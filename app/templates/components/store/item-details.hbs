{{#if inTransaction}}
  {{transition-animation}}
{{/if}}

<div
  id="{{item}}-item-header"
  class="card-header mt-2 p-0 border-bottom border-dark"
>
  <div class="d-flex flex-row justify-content-between align-items-center">
    <h6 class="text-capitalize mb-0 w-100">
      <span class="letter-spacing-min">{{itemName}}</span>
    </h6>
    <button
      class="btn btn-plain btn-sm mb-1"
      data-toggle="collapse"
      data-target="#{{item}}-item-body"
    >
      <p class="small m-0">
        <i class="fas fa-plus"></i>
      </p>
    </button>
  </div>
</div>

<div
  id="{{item}}-item-body"
  class="collapse border-bottom border-black"
  data-parent="#storeAccordion"
>
  <div class="card-body px-0 pt-3">
    <div class="row">
      <div class="col d-flex flex-column justify-content-center">
        {{#if alreadyOwned}}
          <p class="disabled">Already owned</p>
        {{else if canBuy}}
          <p>
            Price:
            <span class="digital-text-large">{{format-money itemPrice precision=0}}</span>
          </p>
        {{else}}
          <p class="text-danger">
            Price:
            <span class="digital-text-large">{{format-money itemPrice precision=0}}</span>
          </p>
        {{/if}}

        {{#if itemSpace}}
          <p>Capacity: {{itemSpace}} lbs</p>
        {{else}}
          {{#if canHarvest}}
            <p>Can harvest: {{canHarvest}}.</p>
          {{else}}
            <p>No harvest ability.</p>
          {{/if}}
        {{/if}}

      </div>

      <div class="col-4 d-flex align-items-center justify-content-center">
        {{#if alreadyOwned}}
          <button
            class="btn btn-secondary btn-block"
            {{action "dropItem"}}
          >
            Drop
          </button>

        {{else if canBuy}}
          <button
            class="btn btn-secondary btn-block"
            {{action "buyItem"}}
          >
            Buy
          </button>

        {{else}}
          <button class="btn btn-secondary btn-block btn-secondary-disabled">Buy</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
