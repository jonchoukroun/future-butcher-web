{{#if inTransaction}}
  {{transition-animation}}
{{/if}}

<div
  id="{{item}}-item-header"
  class="card-header mt-2 p-0 border-bottom border-dark"
>
  <div class="d-flex flex-row justify-content-between align-items-center">
    <h6 class="text-capitalize mb-0 w-100">
      <span class="letter-spacing-min">{{itemName}}</span>
    </h6>
    <button
      class="btn btn-plain btn-sm mb-1"
      data-toggle="collapse"
      data-target="#{{item}}-item-body"
    >
      <p class="small m-0">
        <i class="fas fa-plus"></i>
      </p>
    </button>
  </div>
</div>

<div
  id="{{item}}-item-body"
  class="collapse border-bottom border-black"
  data-parent="#storeAccordion"
>
  <div class="card-body px-0 pt-3">
    <div class="d-flex flex-row">
      {{#if itemSpace}}
        <p>Capacity: {{itemSpace}} lbs</p>
      {{else}}
        {{#if canHarvest}}
          <p>Can harvest: {{canHarvest}}</p>
        {{else}}
          <p>No harvesting ability.</p>
        {{/if}}
      {{/if}}
    </div>

    <div class="d-flex flex-row justify-content-around align-items-center">
      {{#if alreadyOwned}}
        <div class="d-flex flex-grow-1 justify-content-center">
          <p class="disabled mb-0">Already owned</p>
        </div>
        <div class="d-flex flex-grow-1 justify-content-center">
          <button
            class="btn btn-secondary btn-block"
            {{action "dropItem"}}
          >
            Drop
          </button>
        </div>

      {{else if canBuy}}
        <div class="d-flex flex-grow-1 justify-content-center">
          <p class="digital-text-large mb-0">{{format-money itemPrice precision=0}}</p>
        </div>
        <div class="d-flex flex-grow-1">
          <button
            class="btn btn-secondary btn-block"
            {{action "buyItem"}}
          >
            Buy
          </button>
        </div>

      {{else}}
        <div class="d-flex flex-grow-1 justify-content-center">
          <p class="text-danger mb-0">{{format-money itemPrice precision=0}}</p>
        </div>
        <div class="d-flex flex-grow-1 justify-content-center">
          <button
            class="btn btn-secondary btn-block btn-secondary-disabled"
          >
            Buy
          </button>
        </div>
      {{/if}}
    </div>
  </div>

</div>
