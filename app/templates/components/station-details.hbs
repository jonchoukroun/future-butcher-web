<div class="container">
  <div class="row d-flex flex-row justify-content-between align-items-center">
    <h4 class="title-text m-0">
      {{#if (eq currentStation station.name)}}
        <span class="text-secondary">
          {{station.display}}
        </span>
      {{else}}
        {{station.display}}
      {{/if}}

      <button type="button" data-toggle="collapse" data-target="#{{station.name}}-details" class="btn btn-plain d-inline-flex align-items-center ml-1">
        <ion-icon name="information-circle-outline"></ion-icon>
      </button>

      {{#if (and (eq station.name 'downtown') (eq playerDebt 0))}}
        <button type="button" data-toggle="collapse" data-target="#{{station.name}}-locations" class="btn btn-plain d-inline-flex align-items-center ml-1">
          <i class="far fa-building"></i>
        </button>
      {{/if}}

      {{#if (and (eq station.name 'venice_beach') (lt turnsLeft 15))}}
        <button type="button" data-toggle="collapse" data-target="#{{station.name}}-locations" class="btn btn-plain d-inline-flex align-items-center ml-1">
          <i class="fas fa-store-alt"></i>
        </button>
      {{/if}}
    </h4>

    {{#if (not (eq currentStation station.name))}}
      <div class="btn btn-plain" {{action 'selectStation'}}>
        <span><i class="fas fa-arrow-circle-right"></i></span>
      </div>
    {{/if}}
  </div>

  <div class="row">
    <div class="col-12">
      {{#if (or (eq station.name 'downtown') (eq station.name 'venice_beach'))}}
        <div id="{{station.name}}-locations" class="collapse" data-parent="#subway-stations-menu">
          <p class="mb-0">
            {{#if (and (eq station.name 'downtown') (eq playerDebt 0))}}
              Shavings & Loan Bank
            {{/if}}

            {{#if (eq station.name 'venice_beach')}}
              Gus's Surplus Store
            {{/if}}
          </p>
        </div>
      {{/if}}

      <div id="{{station.name}}-details" class="collapse" data-parent="#subway-stations-menu">
        <div class="d-flex flex-row align-items-center justify-content-start">
          <p class="mb-0">{{station.details}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
