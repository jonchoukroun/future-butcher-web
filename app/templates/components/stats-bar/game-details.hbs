<div
  class="card card-body pb-2 bg-black border-left-0 border-right-0 border-bottom-0"
>
  <div
    class="d-flex align-items-center justify-content-around my-3"
  >
    <div class="btn-group w-100">
      <button
        class="btn btn-secondary btn-sm btn-eq-flex"
        {{action "quitGame"}}
      >
        Quit Game
      </button>

      {{#link-to "all-scores" class="btn btn-secondary btn-sm btn-eq-flex"}}
        High Scores
      {{/link-to}}
    </div>
  </div>

  <div class="container px-0">
    <div class="row flex-column justify-content-center px-2">
      <p class="small px-2">
        Powered by Elixir/Phoenix, Ember.js, and backyard lamb roasts.
      </p>

      <p class="small px-2">
        Inspired by the John E. Dell classic <span class="font-italic">Drug Wars</span>.
      </p>

      <p class="small text-center">
        2018
        <i class="far fa-copyright"></i>
        &nbsp;
        Jon Choukroun
      </p>
    </div>

    <div class="row justify-content-end">
      <button
        class="btn btn-simple btn-sm"
        {{action "toggleStatsBar" "#gameDetails"}}
      >
        Close
      </button>
    </div>
  </div>
</div>
