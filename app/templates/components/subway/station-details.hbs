<div class="row">
  <div class="col-7 col-lg-8 d-flex align-items-center justify-content-start">
    <h5 class="m-0">
      {{#if (eq currentStation station.name)}}
        {{station.display}}
      {{else}}
        {{station.display}}
      {{/if}}
    </h5>
  </div>

  <div class="col-5 col-lg-4 d-flex align-items-center justify-content-end">
    {{#if (and (eq station.name "bell_gardens") (gt turnsLeft 20))}}
      <button class="btn btn-simple btn-simple-disabled btn-block">Closed</button>

    {{else if (eq currentStation station.name)}}
      <button class="btn btn-simple btn-simple-disabled btn-block">Here</button>

    {{else if (not-eq currentStation station.name)}}
      {{#if sufficientTurns}}
        <button
          class="btn btn-secondary btn-block d-flex"
          {{action "selectStation"}}
        >
          {{station.travel_time}}
          {{#if (eq station.travel_time 1)}}
            hr
          {{else}}
            hrs
          {{/if}}

          <span class="ml-auto"><i class="fas fa-arrow-circle-right"></i></span>
        </button>

      {{else}}
        <button class="btn btn-simple btn-block btn-simple-disabled">Too far</button>

      {{/if}}
    {{/if}}
  </div>
</div>
