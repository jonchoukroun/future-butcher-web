{{#if hasClosedTutorials}}
  <div class="row justify-content-center align-items-center">
    <p class="text-secondary {{if isEnabled "font-italic"}} m-0">
      Show tutorial messages
    </p>

    {{#if isEnabled}}
      <button class="btn btn-plain btn-small" {{action "toggleTutorials"}}>
        <i class="far fa-check-square"></i>
      </button>

    {{else}}
      <button class="btn btn-plain btn-small" {{action "toggleTutorials"}}>
        <i class="far fa-square"></i>
      </button>
    {{/if}}
  </div>
{{/if}}
