<div
  class="transition-container container-fluid d-flex flex-column justify-content-center align-items-center bg-black"
>
  <h1 class="display-2 transition-animation">
    {{#if (eq icon "subway")}}
      <span class="subway-animation">
        <i class="fas fa-subway"></i>
      </span>

    {{else}}
      <span
        class="default-animation d-flex align-items-center justify-content-center"
      >
        <i class="fas fa-redo"></i>
      </span>
    {{/if}}
  </h1>
</div>
