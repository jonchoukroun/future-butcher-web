{{#if isFirstTurn}}
  <p>
    Your ex's line of credit is enough for a $5,000 loan.
  </p>
{{else}}
  <p>
    Welcome back, loyal customer. Your current credit gives you access to the following loans:
  </p>
{{/if}}

<div class="container-fluid mb-4 mt-5 px-0">
  {{#each loanOptions as |loan|}}
    {{#if (gt totalPlayerValue loan.debt)}}
      {{#if (eq selectedLoan loan.debt)}}
        {{loan-purchase
          debt=loan.debt
          rate=loan.rate
          isDisabled=false
          isSelected=true
          sendLoanSelect=(action "selectLoan")}}
      {{else}}
        {{loan-purchase
          debt=loan.debt
          rate=loan.rate
          isDisabled=false
          sendLoanSelect=(action "selectLoan")}}
      {{/if}}

    {{else}}
      {{loan-purchase
        debt=loan.debt
        rate=loan.rate
        isDisabled=true
        sendLoanSelect=(action "selectLoan")}}
    {{/if}}
  {{/each}}
</div>

<div class="text-center">
  {{#if isFirstTurn}}
    {{#if (and debt rate)}}
      <button
        class="btn btn-secondary btn-lg btn-block"
        {{action "buyLoan"}}>
        Buy loan
      </button>
    {{else}}
      <button
        class="btn btn-secondary btn-lg btn-block btn-disabled">
        Select a loan
      </button>
    {{/if}}

  {{else}}
    <div class="btn-group w-100">
      {{#link-to "market" class="btn btn-secondary btn-lg btn-eq-flex"}}
        Market
      {{/link-to}}

      {{#if (and debt rate)}}
        <button
          class="btn btn-secondary btn-lg btn-eq-flex"
          {{action "buyLoan"}}>
          Buy
        </button>
      {{else}}
        <button class="btn btn-secondary btn-lg btn-disabled btn-eq-flex">
          Select...
        </button>
      {{/if}}
    </div>
  {{/if}}
</div>
