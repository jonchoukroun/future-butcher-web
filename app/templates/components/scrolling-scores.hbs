{{#each scores as |score|}}
  <li class="display-text">
    <div class="row justify-content-around">
      <div class="col-6 px-0 text-left">
        <h6 class="m-1 default-text">
          {{score.player}}
        </h6>
      </div>

      <div class="col-4 pl-0 text-right">
        <h6 class="m-1 display-text">
          {{format-money score.score precision=0}}
        </h6>
      </div>

    </div>
  </li>
{{/each}}
