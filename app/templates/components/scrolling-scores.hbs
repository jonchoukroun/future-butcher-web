{{#each scores as |score|}}
  <li>
    <div class="d-flex flex-row align-items-center justify-content-between">
      <div class="col pl-1">
        <p class="terminal-text">
          {{score.player}}
        </p>
      </div>

      <div class="col">
        <p class="terminal-text text-right">
          {{format-money score.score precision=0}}
        </p>
      </div>
    </div>
  </li>
{{/each}}
