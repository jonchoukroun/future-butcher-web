<div class="btn btn-secondary align-self-end" {{action 'clickBack'}}>
  <i class="fas fa-times"></i>
</div>

<div class="d-flex flex-row">
  <h4>
    {{uc-words cutName}}
    <span class="small">in pack:</span>
    {{number-format cutsOwned decimals=0 thousandsSeparator=","}}
    <span class="small">
      {{#if (eq cutsOwned 1)}}
        lb
      {{else}}
        lbs
      {{/if}}
    </span>
  </h4>
</div>

{{#if errorMessage}}
  {{#liquid-wormhole class="error-message bg-black border border-danger text-center"}}
    <p class="mb-0 text-danger">
      {{errorMessage}}
    </p>
  {{/liquid-wormhole}}
{{/if}}

<form class="transaction-form align-self-center" {{action 'submitSellCut' on='submit'}}>
  <div class="form-row">
    {{input type="number" value=sellAmount placeholder=cutsOwnedPlaceholder autofocus=true classNames="form-control form-control-lg mt-md-2" key-up="calculateProfit"}}
  </div>

  {{#if (not sellAmount)}}
    <div class="d-flex flex-column align-items-center justify-content-center">
      <div class="btn btn-secondary btn-block" {{action 'clickSellMax'}}>
        Sell all {{cutsOwned}} for ${{number-format cutsOwnedProfit decimals=0 thousandsSeparator=","}}
      </div>

      <p class="small">Or enter a different amount.</p>
    </div>

  {{else}}
    <div class="d-flex justify-content-center">
      {{#if errorMessage}}
        <button class="btn btn-secondary btn-block btn-disabled">
          Sell for ${{number-format estimatedProfit decimals=0 thousandsSeparator=","}}
        </button>
      {{else}}
        <button class="btn btn-secondary btn-block" type="submit">
          Sell for ${{number-format estimatedProfit decimals=0 thousandsSeparator=","}}
        </button>
      {{/if}}
    </div>
  {{/if}}
</form>
